# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_AUTO_CREATE_TOPICS=true

# Data Simulation Configuration
SIMULATION_MODE=single
BASE_TPS=10
FRAUD_RATE=0.02
BURST_MODE=false

# Consumer Configuration
CONSUMER_GROUP_ID=fraud-detection-processor
CONSUMER_AUTO_OFFSET_RESET=latest

# Producer Configuration
PRODUCER_ACKS=all
PRODUCER_RETRIES=3
PRODUCER_BATCH_SIZE=16384

# Topic Configuration
TRANSACTIONS_TOPIC=fraud-detection-transactions
PREDICTIONS_TOPIC=fraud-detection-predictions
ALERTS_TOPIC=fraud-detection-alerts
FEEDBACK_TOPIC=fraud-detection-feedback

# Application Configuration
DATABASE_URL=postgresql://fraud_user:fraud_password@postgres:5432/fraud_detection
REDIS_URL=redis://redis:6379
SESSION_SECRET=your-secret-key-change-in-production
FLASK_ENV=production
